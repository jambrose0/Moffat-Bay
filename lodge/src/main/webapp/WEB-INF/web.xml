<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>Lodge</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.htm</welcome-file>
  </welcome-file-list>

  <!-- Existing LoginServlet configuration -->
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>lodge.servlets.LoginServlet</servlet-class>
    <init-param>
      <param-name>jdbcDriver</param-name>
      <param-value>com.mysql.cj.jdbc.Driver</param-value>
    </init-param>
    <init-param>
      <param-name>dbName</param-name>
      <param-value>jdbc:mysql://localhost:3306/moffat_bay_lodge</param-value>
    </init-param>
    <init-param>
      <param-name>dbUser</param-name>
      <param-value>lodgeAdmin</param-value>
    </init-param>
    <init-param>
      <param-name>dbPass</param-name>
      <param-value>moffat2024</param-value>
    </init-param>
  </servlet>

  <!-- New ContactUs servlet configuration -->
 <servlet>
    <servlet-name>Contactus</servlet-name>
    <servlet-class>lodge.beans.Contactus</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>Contactus</servlet-name>
    <url-pattern>/Contactus</url-pattern>
</servlet-mapping>
 
 

</web-app>
